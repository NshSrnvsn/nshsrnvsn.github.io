---
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"projects">;

const { data } = Astro.props;
const { title, description, github, stars, forks, license, readmeLink } = data;

// Generate a random color for the border
const colors = [
  "border-l-red-500",
  "border-l-blue-500", 
  "border-l-yellow-500",
  "border-l-green-500",
  "border-l-purple-500",
  "border-l-pink-500",
  "border-l-orange-500",
  "border-l-teal-500",
];

const borderColor = colors[Math.floor(Math.random() * colors.length)];
---

<li class="h-full">
  <div class={`group relative flex flex-col border border-border rounded-lg bg-background hover:shadow-xl transition-all duration-300 h-[280px] ${borderColor} border-l-4`}>
    <!-- Scrollable Content Area -->
    <div class="flex-1 overflow-y-auto">
      <!-- Header with icon and title -->
      <div class="p-5 pb-3">
        <div class="flex items-start gap-3 mb-2">
          <svg class="w-4 h-4 mt-1 text-foreground/60 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
          </svg>
          <h2 class="text-base font-semibold text-foreground group-hover:text-accent transition-colors">
            {title}
          </h2>
        </div>

        <!-- README Link if provided -->
        {readmeLink && (
          <a 
            href={readmeLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block text-xs text-foreground/60 hover:text-accent mb-2 underline"
          >
            README.md
          </a>
        )}

        <!-- Description -->
        <p class="text-foreground/80 text-sm leading-relaxed mb-4">
          {description}
        </p>
      </div>

    </div>

    <!-- Footer -->
    <div class="border-t border-border/50 px-6 py-4 flex items-center justify-between text-sm flex-shrink-0">
      <div class="flex items-center gap-4 text-foreground/60">
        <!-- Stars -->
        {stars !== undefined && (
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            <span>{stars}</span>
          </div>
        )}

        <!-- Forks -->
        {forks !== undefined && (
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
            </svg>
            <span>{forks}</span>
          </div>
        )}

        <!-- License -->
        {license && (
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
            </svg>
            <span class="text-xs">{license}</span>
          </div>
        )}
      </div>

      <!-- GitHub Link -->
      <a
        href={github}
        target="_blank"
        rel="noopener noreferrer"
        class="text-foreground/60 hover:text-accent transition-colors"
        aria-label="View on GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</li>
